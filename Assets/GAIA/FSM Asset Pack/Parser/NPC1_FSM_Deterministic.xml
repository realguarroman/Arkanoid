<?xml version="1.0" encoding="utf-8" ?>

<FSM_Machine>
	<FSMtype Probabilistic="NO">CLASSIC</FSMtype>
	<FSMid>NPC1_FSMDeterministic</FSMid>
	<Fsm>
		<Callback>EventsTrigger</Callback>
		<States>
			<State Initial="YES">
				<S_Name>INIT</S_Name>
				<S_Action>NULL</S_Action>
				<S_inAction>RESET_NPC</S_inAction>
				<S_outAction>FINISH_INIT</S_outAction>
				<S_Fsm></S_Fsm>
			</State>
			<State Initial="NO">
				<S_Name>MOVING</S_Name>
				<S_Action>MOVE</S_Action>
				<S_inAction>START_MOVING</S_inAction>
				<S_outAction>NULL</S_outAction>
				<S_Fsm></S_Fsm>
			</State>
			<State Initial="NO">
				<S_Name>LAYING_BRICK</S_Name>
				<S_Action>NULL</S_Action>
				<S_inAction>LAY_BRICK</S_inAction>
				<S_outAction>FINISH_LAYING_BRICK</S_outAction>
				<S_Fsm></S_Fsm>
			</State>
		</States>
		
		<Transitions> 
			<Transition>
				<T_Name>INIT_TO_MOVING</T_Name>
				<T_Origin>INIT</T_Origin>
				<T_Destination>MOVING</T_Destination>
				<T_Action>NULL</T_Action>
				<Events>
					<Event>
						<ID>PLAY</ID> 
						<Type>BASIC</Type>
					</Event>
				</Events>	
			</Transition>
			<Transition>
				<T_Name>MOVING_TO_LAYING_BRICK</T_Name>
				<T_Origin>MOVING</T_Origin>
				<T_Destination>LAYING_BRICK</T_Destination>
				<T_Action>NULL</T_Action>
				<Events>
					<Event>
						<ID>LAY_BRICK_E</ID>
						<Type>BASIC</Type>
					</Event>
				</Events>
			</Transition>
			<Transition>
				<T_Name>LAYING_BRICK_TO_MOVING</T_Name>
				<T_Origin>LAYING_BRICK</T_Origin>
				<T_Destination>MOVING</T_Destination>
				<T_Action>NULL</T_Action>
				<Events>
					<Event>
						<ID>MOVE_E</ID>
						<Type>BASIC</Type>
					</Event>
				</Events>
			</Transition>
		</Transitions>
	</Fsm>
</FSM_Machine>